<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
</head>
<body>

    <nav class="navbar  sticky-top navbar-expand-lg navbar-dark  menu ">
        <div class="container-fluid">
            <a class="navbar-brand mx-5" href="@Url.Action("Index","Home")"><img src="../img/image.png" alt="Logo" width="40" height="40" /></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0 menu-links">
                    <li class="nav-item">
                        <a class="nav-link " href="@Url.Action("Index","Home")">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link  " href="@Url.Action("Estetica","Home")">Estetica</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link  " href="@Url.Action("Guarderia","Home")">Guarderia</a>
                    </li>

                </ul>

                <ul class="navbar-nav ms-auto mb-2 mb-lg-0 mx-5 menu-login">
                    <div class="dropdown">
                        <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="../img/usuario.png" alt="Alternate Text" width="30" height="30" />
                        </button>
                        <ul class="dropdown-menu  dropdown-menu-lg-end" aria-labelledby="dropdownMenuButton2">
                            <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#login">Ingresar</a></li>
                            <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#registrarse">Registrarse</a></li>

                            <li><hr class="dropdown-divider"></li>

                            <li><a class="dropdown-item" href="#">Cerrar sesion</a></li>
                        </ul>
                    </div>
                </ul>
            </div>
        </div>
    </nav>


    <!-- Modales -->
    <div class="modal  fade" id="login" tabindex="-1" aria-labelledby="ModalLogin" aria-hidden="true" data-bs-backdrop="static" >
        <div class="modal-dialog">
            <div class="modal-content border-0">
                <div class="modal-header border-0">
                    <button type="button" class="btn-close mx-2" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h2 class="text-center mb-3 mx-5 mt-2 border-bottom"> Iniciar Sesion</h2>
                    <form>
                        <div class="mb-3 mx-5">
                            <label for="Email" class="form-label mt-5" >Correo Electronico</label>
                            <input type="email" class="form-control border-0 border-bottom " required id="Email" aria-describedby="emailHelp">
                        </div>
                        <div class="mb-3 mx-5 ">
                            <label for="password" class="form-label">Contraseña</label>
                            <input type="password" class="form-control border-0 border-bottom " required id="password">
                        </div>
                        <button type="submit" class="btn btn-primary mx-5 mb-5 mt-3 px-5">Enviar</button>
                    </form>
                </div>


            </div>
        </div>
    </div>


    <div class="modal  fade" id="registrarse" tabindex="-1" aria-labelledby="ModalRegistrarse" aria-hidden="true" data-bs-backdrop="static" >
        <div class="modal-dialog">
            <div class="modal-content border-0">
                <div class="modal-header border-0">
                    <button type="button" class="btn-close mx-2" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h2 class="text-center mb-3 mx-5 mt-2 border-bottom"> Registrarse</h2>
                    <form>
                        <div class="mb-3 mx-5">
                            <label for="Email" class="form-label mt-5">Correo Electronico</label>
                            <input type="email" class="form-control border-0 border-bottom "required  id="Email" aria-describedby="emailHelp">
                        </div>
                        <div class="mb-3 mx-5 ">
                            <label for="password" class="form-label">Contraseña</label>
                            <input type="password" class="form-control border-0 border-bottom"required id="password">
                        </div>
                        <div class="mb-3 mx-5 ">
                            <label for="c-password" class="form-label">Confirmar Contraseña</label>
                            <input type="password" class="form-control border-0 border-bottom" required id="c-password">
                        </div>
                        <div class="mb-3 mx-5 form-check">
                            <input type="checkbox" class="form-check-input " required id="terminos">
                            <label class="form-check-label" for="terminos">Terminos y condiciones</label>
                        </div>
                        <button type="submit" class="btn btn-primary mx-5 mb-5 mt-3 px-5 ">Enviar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>



    <div class=" w-100">
        @RenderBody()


    </div>

    <footer class="text-center text-lg-start bg-white text-muted mt-5">


        <section class="border-top">
            <div class="container text-center text-md-start mt-5">

                <div class="row mt-5 d-flex justify-content-center ">

                    <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4 text-center ">

                        <h6 class="text-uppercase fw-bold mb-4">
                            <i class="fas fa-gem me-3 text-secondary"></i>Maca & Co
                        </h6>
                        <p>
                            Lorem ipsum
                            dolor sit amet, consectetur adipisicing elit. Lorem ipsum
                            dolor sit amet, consectetur adipisicing elit.
                        </p>
                    </div>


                    <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4 text-center ">

                        <h6 class="text-uppercase fw-bold mb-4">Contactanos</h6>
                        <p><img src="~/img/direccion.png" alt="Direccion" width="25" height="25" /> Direccion</p>
                        <p><img src="~/img/correo.png" alt="Correo" width="25" height="25" /> info@example.com</p>
                        <p><img src="~/img/telefono.png" alt="Telefono" width="25" height="25" />  + 01 234 567 88</p>
                        <p><img src="~/img/telefono-casa.png" alt="Telefono casa" width="25" height="25" />  + 01 234 567 89</p>
                    </div>


                    <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4 text-center text-black ">

                        <h6 class="text-uppercase fw-bold mb-4">
                            Redes Sociales
                        </h6>
                        <p>
                            <a href="#" class="text-decoration-none"><img src="~/img/facebook.png" alt="Facebook" width="25" height="25" /></a>
                        </p>
                        <p>
                            <a href="#" class="text-decoration-none"><img src="~/img/instagram.png" alt="Instagram" width="25" height="25" /></a>
                        </p>
                        <p>
                            <a href="#" class="text-decoration-none"><img src="~/img/twitter.png" alt="Twitter" width="25" height="25" /></a>
                        </p>
                        <p>

                        </p>
                    </div>
                    <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4 text-center ">
                        <img src="~/img/house-pet.png" alt="Logo" width="200" height="200" />
                    </div>
                    <!-- Grid row -->
                </div>
            </div>
        </section>
        <!-- Section: Links  -->
        <!-- Copyright -->
        <div class="text-center p-4" style="background-color: rgba(0, 0, 0, 0.025);">
            © 2021 Copyright:
            <a class="text-reset fw-bold" href="#">Maca & Co</a>
        </div>
        <!-- Copyright -->
    </footer>
    <!-- Footer -->

    <script type="text/javascript" src="~/Scripts/booo"    ></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
